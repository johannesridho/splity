{
  "name": "splity",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "precommit": "lint-staged",
    "start": "node dist/server.js",
    "start-dev": "nodemon --inspect=0.0.0.0:9229 dist/server.js",
    "build-watch": "npm run build && npm-run-all -p watch start-dev",
    "build": "npm run build-ts && npm run lint-ts",
    "build-ts": "tsc",
    "lint-ts": "tslint -c tslint.json -p tsconfig.lint.json -t stylish --force",
    "watch": "tsc -w",
    "test": "jest",
    "docker-debug": "docker-compose up"
  },
  "dependencies": {
    "actions-on-google": "^2.3.0",
    "compression": "^1.7.3",
    "dotenv": "^6.0.0",
    "express": "~4.16.3",
    "helmet": "^3.13.0",
    "morgan": "^1.9.0",
    "pg": "^7.4.3",
    "pg-hstore": "^2.3.2",
    "pg-native": "^3.0.0",
    "request-promise": "^4.2.2",
    "sequelize": "^4.39.0",
    "sequelize-cli": "^4.1.1",
    "winston": "^3.1.0"
  },
  "devDependencies": {
    "@types/compression": "^0.0.36",
    "@types/dotenv": "^4.0.3",
    "@types/express": "^4.16.0",
    "@types/helmet": "^0.0.40",
    "@types/jest": "^23.3.1",
    "@types/morgan": "^1.7.35",
    "@types/node": "^10.9.4",
    "@types/pg": "^7.4.10",
    "@types/request-promise": "^4.1.42",
    "@types/sequelize": "^4.27.25",
    "@types/winston": "^2.4.4",
    "dialogflow-fulfillment": "^0.5.0",
    "husky": "^0.14.3",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.4",
    "npm-run-all": "^4.1.3",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.4",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.15.0",
    "tslint-immutable": "^4.7.0",
    "typescript": "^3.0.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "testRegex": "(/<rootDir>/src/.*|(\\.|/)spec)\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "lint-staged": {
    "src/**/*.{js,jsx,json,ts,tsx,css,scss}": [
      "prettier --print-width 120 --write",
      "git add"
    ]
  }
}
