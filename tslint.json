{
  "extends": ["tslint:recommended", "tslint-immutable"],
  "linterOptions": {
    "exclude": [
      "**/*.spec.ts"
    ]
  },
  "rules": {
    "interface-name": [
      true,
      "never-prefix"
    ],
    "max-line-length": [true, 120],
    "ordered-imports": false,
    "trailing-comma": [true, {"multiline": "never", "singleline": "never"}],
    "quotemark": [true, "double", "avoid-template"]
  }
}
